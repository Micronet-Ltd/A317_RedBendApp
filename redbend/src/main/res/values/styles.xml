<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Activity body font style -->
    <style name="TextViewStyle" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:capitalize">characters</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>        
        <item name="android:inputType">textMultiLine|textNoSuggestions</item>
    </style>

  <!-- Activity body font style with padding left-->
    <style name="TextViewStyle.PaddingLeft" parent="@style/TextViewStyle" >
        <item name="android:paddingLeft">20sp</item>
        <item name="android:paddingRight">20sp</item>
    </style>
    
   <!-- Activity body font style with padding left and small font-->
    <style name="TextViewStyle.PaddingLeftAndSmallerFont" parent="@style/TextViewStyle.PaddingLeft">
      	<item name="android:textSize">16sp</item>
      	<item name="android:paddingLeft">40sp</item>
    </style>    
    
    <!-- Button font style -->
    <style name="TextViewStyle.ButtonTextStyle" parent="@android:style/Widget.DeviceDefault.Button">
        <item name="android:paddingLeft">0sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:inputType">textMultiLine|textNoSuggestions</item>
    </style>  
    
  <!-- Action bar font style -->
    <style name="ActionBarTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:textColor">#AB180D</item>
        <item name="android:textSize">22sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">textMultiLine|textNoSuggestions</item>
    </style>
    
    <style name="ActionBarTheme.ActionBarStyle" parent="@android:style/Widget.DeviceDefault.ActionBar">
        <item name="android:titleTextStyle">@style/ActionBarTheme.ActionBar.TitleTextStyle</item>
    </style>
    
     <!-- Application theme -->
    <style name="ActionBarTheme" parent="@android:style/Theme.DeviceDefault">       
        <item name="android:actionBarStyle">@style/ActionBarTheme.ActionBarStyle</item>
        <!--item name="android:textViewStyle">@style/TextViewStyle</item-->
         <item name="android:buttonStyle">@style/TextViewStyle.ButtonTextStyle</item>
    </style>   
    
     <!-- Automotive Application theme -->
    <style name="NoActionBarTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
    	<item name="android:windowNoTitle">true</item>
	</style>
	
     <style name="Divider">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">1dp</item>
	</style>
	
     <style name="ButtomBarButton">
         <item name="android:background">@android:drawable/bottom_bar</item>
     </style>

</resources>