<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="2dip"
        android:paddingRight="2dip"
        android:paddingTop="4dip" >

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/InstallConfirmText"
                    android:layout_width="wrap_content"
                    style="@style/TextViewStyle.PaddingLeft"
                    android:layout_height="wrap_content" />

              <TextView
                    android:id="@+id/InstallConfirmList"
                    android:layout_width="wrap_content"
                    style="@style/TextViewStyle.PaddingLeftAndSmallerFont"
                    android:layout_height="wrap_content" />
                
                <TextView
                    android:id="@+id/scomoInstInfoUrl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextViewStyle.PaddingLeft"
                    android:paddingBottom="20dip"
                    android:paddingTop="5dip"
                    android:text="" />
                <TextView
                    android:id="@+id/InstallConfirmFotter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextViewStyle.PaddingLeft"
                    android:text="" />
            </LinearLayout>
        </ScrollView>
        <!-- Starts in : timer -->

        <TextView
            android:id="@+id/InstallConfirmTimerText"
            android:layout_width="fill_parent"
            style="@style/TextViewStyle.PaddingLeft"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/bottom_bar"
        android:orientation="horizontal"
        android:paddingLeft="2dip"
        android:paddingRight="2dip"
        android:paddingTop="4dip" >

        <Button
            android:id="@+id/InstallConfirmConfirmButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onButtonClicked"
            android:text="@string/ok" >
        </Button>
        <Button
            android:id="@+id/InstallConfirmCancelButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onButtonClicked"
            android:text="@string/cancel" >
        </Button>
        <Button
            android:id="@+id/InstallConfirmPostponeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onButtonClicked"
            android:text="@string/postpone" >
        </Button>
    </LinearLayout>

</LinearLayout>